[colors]
;background = ${xrdb:color0:#222}
background = #000
background-alt = #21252b
; 222
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #555
secondary = #e60053
alert = #bd2c40

[bar/heads-up]
monitor = ${env:MONITOR:}
width = 100%
height = ${env:POLYBAR_HEIGHT:}
offset-x = 0
offset-y = 0
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 0

font-0 = "NotoSansMono Nerd Font:pixelsize=22;5"

modules-left = hostname bspwm
; modules-center = task
modules-right = barrier song filesystem memory cpu dots-repo spark-repo battery pulseaudio wireless-network time

tray-position = left
tray-padding = 0
;tray-background = #0063ff

wm-restack = bspwm

;override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize


[bar/detail]
; Same as primary with no tray
inherit = bar/heads-up
monitor = ${env:MONITOR:}


[module/task]
type = custom/script

; Available tokens:
;   %counter%
; Command to be executed (using "/bin/sh -c [command]")
exec = timew | head -n 1 | sed 's/Tracking //' | sed 's/"//g' 

; Conditional command that, if defined, needs to exit successfully
; before the main exec command is invoked.
; Default: ""
;exec-if = pgrep -x pianobar

; Will the script output continous content?
; Default: false
tail = false

; Seconds to sleep between updates
; Default: 5 (0 if `tail = true`)
interval = 1


[module/hostname]
format-prefix = " "
format-foreground = #666
type = custom/script
exec = hostname -s
interval = 3200

; TODO: Use "ramp" to show colors based on number of files modified
[module/dots-repo]
type = custom/script

format-background = #623f1d
format-foreground = #000000
label-padding = 1

exec = echo ""
exec-if = [[ $(dots status -s | wc -l) > 0 ]] 
interval = 20


[module/spark-repo]
type = custom/script

format-background = #623f1d
format-foreground = #000000
label-padding = 1

exec = echo ""
; TODO: Update sparks repo when moved into the common code directory
exec-if = [[ $(git --git-dir="${HOME}/spark/.git" --work-tree="${HOME}/spark" status -s | wc -l) > 0 ]] 
interval = 20


[module/song]
format-prefix = "%{T3} %{T-}"

type = custom/script

; Available tokens:
;   %counter%
; Command to be executed (using "/bin/sh -c [command]")
exec = echo "$(cat /tmp/pianobar.title) - $(cat /tmp/pianobar.artist)   ($(cat /tmp/pianobar.station))"

; Conditional command that, if defined, needs to exit successfully
; before the main exec command is invoked.
; Default: ""
exec-if = pgrep -x pianobar

; Will the script output continous content?
; Default: false
tail = false

; Seconds to sleep between updates
; Default: 5 (0 if `tail = true`)
interval = 1


[module/filesystem]
