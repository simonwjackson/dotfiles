module-margin-right = 0

font-0 = "NotoSansMono Nerd Font:pixelsize=22;5"
; font-0 = "Terminus:pixelsize=10;2"
; font-1 = "TerminessTTF Nerd Font Mono:size=22;5"
; font-2 = "TerminessTTF Nerd Font Mono:size=12;4"

modules-left = bspwm
; modules-center = task
modules-right = song memory cpu backlight-acpi battery pulseaudio wireless-network date

tray-position = right
tray-padding = 0
;tray-background = #0063ff

