# Read `man 5 sway` for a complete reference.  

### Variables
#
# Logo key. Use Mod1 for Alt.
set $gui		Mod1
set $alt 		Mod4
set $media	$gui+alt
set $hyper	$gui+$alt+ctrl+shift
set $meh 		$alt+shift+ctrl

# Home row direction keys, like vim
set $left 	h
set $down 	j
set $up			k
set $right 	l

bindsym $gui+ctrl+Down				exec "${HOME}/bin/sway/bin/sway quarterDown"
bindsym $gui+shift+ctrl+Down	exec "${HOME}/bin/sway/bin/sway fullDown"
bindsym $gui+ctrl+Up					exec "${HOME}/bin/sway/bin/sway quarterUp"
bindsym $gui+shift+ctrl+Up		exec "${HOME}/bin/sway/bin/sway fullUp"
bindsym $gui+ctrl+Left				exec "${HOME}/bin/sway/bin/sway transformCounter"
bindsym $gui+ctrl+Right				exec "${HOME}/bin/sway/bin/sway transformClock"

for_window [app_id="fzf-menu"]	floating enable, focus, resize set 640 480, border none
for_window [app_id="wifi-menu"] floating enable, resize set 824 300, border pixel 10, client.focused #000000 #000000 #d7d7d7 #000000 #000000, 	client.focused_inactive   #000000 #000000 #d7d7d7 #000000 #000000, 	client.unfocused #000000 #000000 #d7d7d7 #000000 #000000, client.placeholder #000000 #000000 #d7d7d7 #000000 #000000, focus

# Colors								border	bg		text	indicator child_border
client.focused					#21242D #21242D #d7d7d7 #21242D   #21242D
client.focused_inactive	#21242D #21242D #d7d7d7 #21242D   #21242D
client.unfocused				#000000 #000000 #d7d7d7 #21242D   #000000
client.placeholder			#000000 #000000 #d7d7d7 #21242D   #000000

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border none

# Your preferred terminal emulator
set $term kitty 

# Start a terminal
bindsym $gui+Return exec $term

# Scratchpad Term
for_window [title="myterm"] move scratchpad; move position center;
exec ${HOME}/bin/floating-terminal
bindsym $gui+Shift+Return [title="myterm"] scratchpad show, mode default, move position center

# Your preferred application launcher
# Note: it's recommended that you pass the final command to sway
# set $menu rofi | xargs swaymsg exec --
